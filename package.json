{
  "name": "e-learning-monorepo",
  "version": "1.0.0",
  "description": "E-Learning monorepo met gedeelde core en meerdere e-learning apps",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/core",
    "dev:multi": "npm run dev:multi --workspace=packages/core",
    "dev:app": "npm run dev:app --workspace=packages/core --",
    "start": "npm run start --workspace=packages/core",
    "install:all": "npm install",
    "build": "npm run build --workspaces --if-present"
  },
  "keywords": [
    "e-learning",
    "education",
    "ai",
    "gemini",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
